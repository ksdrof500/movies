<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.movies_tek">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MoviesApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.details.view.DetailsActivity"
            android:label="@string/title_activity_movie_details"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/AppTheme.DrawStatusBar.Explode" />
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name"
            android:parentActivityName=".ui.login.view.LoginActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".ui.login.view.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />

        <receiver
            android:name=".broadcast.ConnectivityReceiver"
            android:enabled="true">
            <intent-filter>
                <action
                    android:name="android.net.conn.CONNECTIVITY_CHANGE"
                    tools:ignore="BatteryLife" />
            </intent-filter>

        </receiver>

    </application>

</manifest>