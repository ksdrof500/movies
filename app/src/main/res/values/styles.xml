<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryDark">@color/red_700</item>
        <item name="colorAccent">@color/amber_A400</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="AppTheme.DrawStatusBar" parent="AppTheme" />

    <style name="AppTheme.DrawStatusBar.Explode" parent="AppTheme.DrawStatusBar" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="SubHeader">
        <item name="fontFamily">@string/font_fontFamily_medium</item>
        <item name="android:textSize">@dimen/sub_header_text_size</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

</resources>
